<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cv_img_activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5.0dip"
    android:layout_marginBottom="2.0dip"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:id="@+id/school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <com.looklook.xinghongfei.looklook.widget.ShowView
        android:id="@+id/school_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="5dp"
        >

    </com.looklook.xinghongfei.looklook.widget.ShowView>
    <TextView
        android:id="@+id/school_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/school_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:text="广州大学华软软件学院"
        android:textSize="16sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >



        <TextView
            android:id="@+id/school_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本科"
            android:textSize="11sp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape"
            />

        <TextView
            android:id="@+id/school_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="506 - 650"
            android:textSize="11sp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape"
            />

    </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="#ccc"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        >


        <LinearLayout
            android:id="@+id/school_forum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/message_school11"
                />

            <TextView
                android:id="@+id/forum_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="20"
                android:textSize="10sp"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/school_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/collect_image"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/collect_nomal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="收藏"
                android:textSize="10sp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/school_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/location"
                />

            <TextView
                android:id="@+id/school_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="广州"
                android:textSize="10sp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/school_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/share"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="分享"
                android:textSize="10sp"
                />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ececec">

    </View>

</LinearLayout>
    </android.support.v7.widget.CardView>